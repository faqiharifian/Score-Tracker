<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digit.safian.scoretracker" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".DosenActivity"
            android:label="@string/title_activity_dosen" >
        </activity>
        <activity
            android:name=".MhsActivity"
            android:label="@string/title_activity_mhs">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <provider
            android:name=".data.ScoreProvider"
            android:authorities="com.digit.safian.scoretracker"
            android:exported="false"
            android:syncable="true" />

        <activity
            android:name=".NilaiMhsActivity"
            android:label="@string/title_activity_nilai_mhs"
            android:parentActivityName=".MhsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MhsActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MhsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MhsActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
